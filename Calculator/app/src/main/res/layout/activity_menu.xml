<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Menu" android:background="@android:color/black">

    <Button
            android:text="Basic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/basicCalButton" android:background="#1a1a1a"
            android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/advancedCalButton" android:layout_marginTop="10dp"
            app:layout_constraintVertical_chainStyle="packed" android:textSize="22sp"/>
    <Button
            android:text="Advanced"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/advancedCalButton" android:background="#1a1a1a"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/aboutButton"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/basicCalButton"
            android:textSize="22sp"/>
    <Button
            android:text="About"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/aboutButton" android:background="#1a1a1a"
            android:layout_marginStart="30dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/advancedCalButton" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/exitButton"/>
    <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:id="@+id/view2" android:background="#00cc66" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/basicCalButton"/>
    <TextView
            android:text="Calculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAlignment="center" android:textSize="50sp" android:textColor="#e69900"
            android:layout_marginTop="150dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toTopOf="@+id/view2"/>
    <Button
            android:text="EXIT"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/exitButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp" android:layout_marginStart="30dp" android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/aboutButton" android:layout_marginTop="10dp"
            android:background="#1a1a1a" android:textSize="20dp"/>
</android.support.constraint.ConstraintLayout>