<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BasicCalc" android:background="@android:color/black">

    <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:id="@+id/view" android:background="#e69900" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="26dp" android:layout_marginBottom="280dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/resultBar" android:layout_marginTop="100dp"/>
    <Button
            android:text="C"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/buttonTan"
            app:layout_constraintTop_toBottomOf="@+id/view" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/button7" android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp" app:layout_constraintEnd_toStartOf="@+id/buttonAC"
            android:layout_marginEnd="8dp" android:background="#1a1a1a"
            android:textColor="#e69900" android:textSize="20sp"
            app:layout_constraintHorizontal_chainStyle="packed"/>
    <Button
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button7"
            app:layout_constraintTop_toBottomOf="@+id/buttonTan" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/button4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp"
            app:layout_constraintEnd_toStartOf="@+id/button8" android:layout_marginEnd="8dp"
            android:background="#1a1a1a" android:textSize="20sp"
    />
    <Button
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/button7" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/button1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp"
            app:layout_constraintEnd_toStartOf="@+id/button5" android:layout_marginEnd="8dp"
            android:background="#1a1a1a" android:textSize="20sp"
    />
    <Button
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button1"
            app:layout_constraintTop_toBottomOf="@+id/button4" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonPM" app:layout_constraintVertical_bias="0.77"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp" app:layout_constraintEnd_toStartOf="@+id/button2"
            android:layout_marginEnd="8dp" android:background="#1a1a1a"
            android:textSize="20sp"/>
    <Button
            android:text="+/-"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/buttonPM" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp"
            app:layout_constraintEnd_toStartOf="@+id/button0" android:layout_marginEnd="8dp"
            android:background="#1a1a1a" android:textSize="20sp"
    />
    <Button
            android:text="AC"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/buttonAC"
            app:layout_constraintStart_toEndOf="@+id/buttonTan"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view" android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/button8"
            app:layout_constraintEnd_toStartOf="@+id/buttonPowPow" android:layout_marginEnd="8dp"
            android:background="#1a1a1a" android:textColor="#ff0000"
            android:textSize="20sp"/>
    <Button
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button8"
            app:layout_constraintTop_toBottomOf="@+id/buttonAC" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/button5" app:layout_constraintStart_toEndOf="@+id/button7"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button9" android:layout_marginEnd="8dp"
            android:background="#1a1a1a" android:textSize="20sp"
    />
    <Button
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button5"
            app:layout_constraintTop_toBottomOf="@+id/button8" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/button2" app:layout_constraintStart_toEndOf="@+id/button4"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button6" android:layout_marginEnd="8dp"
            android:background="#1a1a1a" android:textSize="20sp"
    />
    <Button
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/button5" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/button0" app:layout_constraintStart_toEndOf="@+id/button1"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button3" android:layout_marginEnd="8dp"
            android:background="#1a1a1a" android:textSize="20sp"
    />
    <Button
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button0" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintStart_toEndOf="@+id/buttonPM"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonComa" android:layout_marginEnd="8dp"
            android:background="#1a1a1a" android:textSize="20sp"
    />
    <Button
            android:text="%"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/buttonPowPow"
            app:layout_constraintTop_toBottomOf="@+id/view" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/button9" android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@+id/buttonAC"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/buttonDevide"
            android:layout_marginEnd="8dp" android:background="#1a1a1a"
            android:textColor="#00cc66" android:textSize="20sp"/>
    <Button
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button6"
            app:layout_constraintTop_toBottomOf="@+id/button9" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/button3" app:layout_constraintStart_toEndOf="@+id/button5"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonMinus" android:layout_marginEnd="8dp"
            android:background="#1a1a1a" android:textSize="20sp"
    />
    <Button
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button3"
            app:layout_constraintTop_toBottomOf="@+id/button6" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonComa" app:layout_constraintStart_toEndOf="@+id/button2"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonPlus" android:layout_marginEnd="8dp"
            android:background="#1a1a1a" android:textSize="20sp"
    />
    <Button
            android:text=","
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/buttonComa"
            app:layout_constraintTop_toBottomOf="@+id/button3" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/button0"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonResult" android:layout_marginEnd="8dp"
            android:background="#1a1a1a" android:textSize="20sp"
    />
    <Button
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button9"
            app:layout_constraintTop_toBottomOf="@+id/buttonPowPow" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/button6" app:layout_constraintStart_toEndOf="@+id/button8"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonMultiply" android:layout_marginEnd="8dp"
            android:background="#1a1a1a" android:textSize="20sp"
    />
    <Button
            android:text="/"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/buttonDevide" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonPowPow"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonMultiply" android:layout_marginTop="20dp"
            android:background="#1a1a1a" android:textColor="#00cc66" android:textSize="20sp"
            android:layout_marginEnd="26dp"/>
    <Button
            android:text="*"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/buttonMultiply" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button9"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonDevide" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonMinus" android:layout_marginEnd="26dp"
            android:background="#1a1a1a" android:textColor="#00cc66"
            android:textSize="20sp"/>
    <Button
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/buttonMinus" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button6"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonMultiply" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonPlus" android:layout_marginEnd="26dp"
            android:background="#1a1a1a" android:textColor="#00cc66"
            android:textSize="20sp"/>
    <Button
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/buttonPlus" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button3"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonMinus"
            app:layout_constraintBottom_toTopOf="@+id/buttonResult" android:layout_marginBottom="10dp"
            android:layout_marginEnd="26dp" android:background="#1a1a1a"
            android:textColor="#00cc66" android:textSize="20sp"/>
    <Button
            android:text="="
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/buttonResult" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonComa"
            android:layout_marginStart="8dp" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonPlus" android:layout_marginEnd="26dp"
            android:background="#00994d" android:textSize="20sp" android:textAlignment="center"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/resultBar" android:layout_marginStart="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/view" android:background="#000000"
            android:textSize="35sp" android:textAlignment="viewEnd" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginEnd="26dp" android:layout_marginBottom="10dp"/>
    <ImageButton
            android:src="?attr/actionModeCloseDrawable"
            android:layout_width="52dp"
            android:layout_height="37dp"
            android:id="@+id/deleteButton"
            app:layout_constraintBottom_toTopOf="@+id/view" android:layout_marginBottom="12dp"
            android:background="#e69900" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="26dp"
            android:visibility="invisible"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_revert"
            android:id="@+id/backButton"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/deleteButton"
            app:layout_constraintTop_toBottomOf="@+id/resultBar"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.018" app:layout_constraintVertical_bias="0.921"
            android:background="@android:color/black"/>
</android.support.constraint.ConstraintLayout>